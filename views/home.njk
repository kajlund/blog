{% extends "layout.njk" %}

{% block content %}
  <section class="hero">
    <h1>Welcome to My Thoughts</h1>
    <p>A collection of articles on JavaScript, Node, and more.</p>
  </section>

  <section class="latest-posts">
    <h2>Recent Posts</h2>
    <div class="post-grid">
      {% for post in posts %}
        <div class="post-card">
          <h3><a href="/posts/{{ post.slug }}">{{ post.title }}</a></h3>
          <p>{{ post.description }}</p>
          <small>{{ post.createdAt }} | {{ post.updatedAt }}</small>
        </div>
      {% else %}
        <p>No posts found!</p>
      {% endfor %}
    </div>
  </section>
{% endblock %}
